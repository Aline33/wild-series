{% extends 'base.html.twig' %}

{% block title %}Saison # {{ season.number }}{% endblock %}

{% block body %}
    <div class="my-5 mx-auto" style="width: 60%">
        <div class="card">
            <div class="media">
                <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
                <div class="media-body">
                    <h1 class="mt-0">Saison {{ season.number }} de {{ program.title }}</h1>
                    <h6>{{ season.year }}</h6>
                    <p>{{ season.description }}</p>
                    <ul>
                        {% for episode in episodes %}
                            <li>Episode {{ episode.number }} : {{ episode.title }}</li>
                        {% endfor %}
                    </ul>


                </div>
            </div>
        </div>

        <a href="{{ path('program_index') }}">
            Retour Ã  la liste des programmes
        </a>
    </div>
{% endblock %}
