{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <h1 class="text-center p-5">Connecte toi !</h1>
    <form action="{{ path('app_login') }}" method="post" style="width:30%" class="m-auto">
        <div class="mb-3">
            <label for="username" class="form-label">Adresse email :</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Mot de passe :</label>
            <input type="password" id="password" name="_password" class="form-control">
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-dark">Se connecter</button>
        </div>
    </form>
{% endblock %}
