<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('build/favicon.ico') }}" type="image/x-icon">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body {{ stimulus_controller('theme') }} {{ stimulus_target('theme', 'body') }} {{ stimulus_controller('symfony/ux-swup/swup') }}>
    <header>
        {% include '_navbar.html.twig' %}
    </header>
        {% for category, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ category }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    <div id="swup">
        {% block body %}
        {% endblock %}
        {{ component('last_episode') }}
    </div>
    <footer class="m-0 p-3">
        {% include '_footer.html.twig' %}
    </footer>
    </body>
</html>
